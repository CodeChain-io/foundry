{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es7"],
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
